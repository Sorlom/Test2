@model Interfaces.Presentacion.Entities.Factory

@{
    ViewData["Title"] = "Create Factory";
}

<h2>Create Factory</h2>



<form class="form-horizontal" asp-action="Add" asp-controller="Factory" method="post">
    <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label">Phone</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" name="Phone" placeholder="Phone" value="@Model.Phone">
        </div>
    </div>
    <div class="form-group">
        <label for="inputPassword3" class="col-sm-2 control-label">Factory</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" name="Address" placeholder="Address" value="@Model.Address">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Create</button>
        </div>
    </div>
</form>